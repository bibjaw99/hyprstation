
" ==============================
"        Basic Settings 
" ==============================
set number
set relativenumber
set nocompatible
set mouse=a
set clipboard=unnamedplus
set textwidth=79
set laststatus=2
set path +=**

syntax enable
filetype plugin on

" ==============================
"         keymaps
" ==============================
set timeoutlen=500
inoremap kj <esc>
vnoremap kj <esc>
cnoremap kj <C-C>

" buffer keymaps
